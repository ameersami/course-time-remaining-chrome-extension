{
  "name": "WesBos Course Tracker",
  "version": "1.0",
  "description": "An extension that displays the time remaining and lessons completed for a WesBos course at the top of the course page",
  "permissions": ["activeTab"],
  "web_accessible_resources": [
    "popup.html"
  ],
  "content_scripts": [
    {
      "matches": ["*://courses.wesbos.com/*"],
      "js": ["logic.js"]
    }
  ],
  "icons": { 
    "16": "./icons/icon16.png",
    "48": "./icons/icon48.png",
    "128": "./icons/icon128.png" 
  },
  "manifest_version": 2
}